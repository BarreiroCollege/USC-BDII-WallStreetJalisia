<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import java.net.URL?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gal.sdc.usc.wallstreet.controller.PagosController"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@styles/base.css" />
        <URL value="@styles/cartera.css" />
        <URL value="@styles/scrollbar.css" />
    </stylesheets>

    <children>
        <JFXTabPane fx:id="menu_pagos" layoutX="-1.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="555.0" prefWidth="867.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Historial de pagos ">
                    <content>
                        <AnchorPane prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <JFXToggleButton fx:id="toggleFiltrado" layoutX="730.0" layoutY="0.0"  prefHeight="58.0" prefWidth="138.0" text="Filtrar tabla" toggleColor="#4059a9" toggleLineColor="#adbde0">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </JFXToggleButton>
                                <!--Tabla de pagos programados-->
                                <TableView fx:id="tablaPagosProgramados" layoutX="30.0" layoutY="30.0" prefHeight="370.0" prefWidth="425.0">
                                    <columns>
                                        <TableColumn prefWidth="425.0" text="Pagos Participaciones Empresa">
                                            <columns>
                                                <TableColumn fx:id="colFechaPago" prefWidth="122.5" text="Fecha Pago" />
                                                <TableColumn fx:id="colFechaAnuncio" prefWidth="122.5" text="Fecha anuncio"  />
                                                <TableColumn fx:id="colBeneficio" prefWidth="30.0" text="Beneficio" />
                                                <TableColumn fx:id="colParticipacion" prefWidth="30.0" text="Participación" />
                                            </columns>
                                        </TableColumn>
                                    </columns>
                                </TableView>
                                <Pane fx:id="paneFiltro" layoutX="0.0" layoutY="0.0" prefHeight="125.0" prefWidth="247.0">
                                    <children>
                                        <Label fx:id="lblFiltrar" layoutX="625.0" layoutY="15.0" text="FILTRAR">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Label>

                                        <Label fx:id="lblAnuncioFecha" layoutX="500.0" layoutY="70.0" text="Anuncio fecha de pago:">
                                            <font>
                                                <Font size="17.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="lblAntesDe" layoutX="550.0" layoutY="125.0" text="Antes de:">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <JFXDatePicker fx:id="dAnuncioPagoAntesDe" layoutX="650.0" layoutY="115.0" prefHeight="12.0" prefWidth="120.0"/>
                                        <Label fx:id="lblDespuesDe" layoutX="550.0" layoutY="175.0" text="Después de:">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <JFXDatePicker fx:id="dAnuncioPagoDespuesDe" layoutX="650.0" layoutY="165.0" prefHeight="12.0" prefWidth="120.0"/>

                                        <!--fecha de pago-->
                                        <Label fx:id="lblFechaPago" layoutX="500.0" layoutY="250.0" text="Fecha de pago:">
                                            <font>
                                                <Font size="17.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="lblAntesDe2" layoutX="550.0" layoutY="300.0" text="Antes de:">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <JFXDatePicker fx:id="dPagoAntesDe" layoutX="650.0" layoutY="300.0" prefHeight="12.0" prefWidth="120.0"/>
                                        <Label fx:id="lblDespuesDe2" layoutX="550.0" layoutY="350.0" text="Después de:">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <JFXDatePicker fx:id="dPagoDespuesDe" layoutX="650.0" layoutY="350.0" prefHeight="12.0" prefWidth="120.0"/>

                                        <JFXButton fx:id="buttonBuscar" layoutX="610.0" layoutY="415.0" mnemonicParsing="false" text="Buscar" style="-fx-background-color: #adbde0;">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </JFXButton>
                                    </children>
                                </Pane>
                                <JFXButton fx:id="buttonVolverPagosProgramados" layoutX="50.0" layoutY="415.0" mnemonicParsing="false" text="Volver">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </JFXButton>
                            </children>
                        </AnchorPane>
                    </content>

                </Tab>
                <Tab text="Realizar pago">
                    <content>
                        <AnchorPane prefHeight="180.0" prefWidth="200.0">
                            <Label fx:id="lblRealizarPago" layoutX="350.0" layoutY="10.0" text="REALIZAR PAGO">
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Label>

                            <Label fx:id="lblMetodoPago" layoutX="250.0" layoutY="100.0" text="Método de pago:">
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Label>

                            <JFXComboBox fx:id="cbMetodoPago" layoutX="450.0" layoutY="100.0">

                            </JFXComboBox>

                            <Label fx:id="lblDinero" layoutX="150.0" layoutY="150.0" text="Dinero:">
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Label>

                            <JFXTextField fx:id="txtDinero" layoutX="330.0" layoutY="150.0" />

                            <Spinner fx:id="sPorcentajeBeneficios" layoutX="575.0" layoutY="150.0"></Spinner>

                            <Label  layoutX="790.0" layoutY="155.0" text="\%">
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Label>

                            <Label fx:id="lblParticipaciones" layoutX="150.0" layoutY="200.0" text="Participaciones:">
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Label>

                            <JFXTextField fx:id="txtParticipaciones" layoutX="330.0" layoutY="200.0" />

                            <Spinner fx:id="sPorcentajeParticipaciones" layoutX="575.0" layoutY="200.0"></Spinner>

                            <Label  layoutX="790.0" layoutY="205.0" text="\%">
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Label>

                            <JFXCheckBox fx:id="cbPagoProgramado" layoutX="250.0" layoutY="300.0" text = "Pago programado"/>

                            <JFXDatePicker fx:id="dFechaPago" layoutX="475.0" layoutY="300.0" prefHeight="12.0" prefWidth="120.0"/>

                            <JFXButton fx:id="buttonPagar" layoutX="525.0" layoutY="415.0" mnemonicParsing="false" text="Pagar" style="-fx-background-color: #adbde0;">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </JFXButton>
                            <JFXButton fx:id="buttonVolverPagos" layoutX="250.0" layoutY="415.0" mnemonicParsing="false" text="Volver">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </JFXButton>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </JFXTabPane>

    </children>





</AnchorPane>
