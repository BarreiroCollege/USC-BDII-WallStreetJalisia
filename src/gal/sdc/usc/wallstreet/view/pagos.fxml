<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import java.net.URL?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXToggleButton?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gal.sdc.usc.wallstreet.controller.PagosController"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@styles/base.css" />
        <URL value="@styles/cartera.css" />
    </stylesheets>

    <children>
        <JFXTabPane fx:id="menu_pagos" layoutX="-1.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="555.0" prefWidth="867.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Pagos programados ">
                    <content>
                        <AnchorPane prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <!--Tabla de pagos programados-->
                                <TableView fx:id="tablaPagosProgramados" layoutX="30.0" layoutY="30.0" prefHeight="370.0" prefWidth="425.0">
                                    <columns>
                                        <TableColumn prefWidth="425.0" text="Pagos Participaciones Empresa">
                                            <columns>
                                                <TableColumn fx:id="colFechaAnuncio" prefWidth="106.25" text="Fecha anuncio" />
                                                <TableColumn fx:id="colFechaPago" prefWidth="106.25" text="Fecha Pago" />
                                                <TableColumn fx:id="colBeneficio" prefWidth="106.25" text="Beneficio" />
                                                <TableColumn fx:id="colParticipacion" prefWidth="106.25" text="Participación" />
                                            </columns>
                                        </TableColumn>
                                    </columns>
                                </TableView>
                                <Pane fx:id="paneFiltro" layoutX="0.0" layoutY="0.0" prefHeight="125.0" prefWidth="247.0">
                                    <children>
                                        <Label fx:id="lblFiltrar" layoutX="625.0" layoutY="15.0" text="FILTRAR">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Label>

                                        <Label fx:id="lblAnuncioFecha" layoutX="500.0" layoutY="70.0" text="Anuncio fecha de pago:">
                                            <font>
                                                <Font size="17.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="lblAntesDe" layoutX="550.0" layoutY="125.0" text="Antes de:">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <JFXDatePicker fx:id="dPAntesDe" layoutX="650.0" layoutY="115.0" prefHeight="12.0" prefWidth="120.0"/>
                                        <Label fx:id="lblDespuesDe" layoutX="550.0" layoutY="175.0" text="Después de:">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <JFXDatePicker fx:id="dPDespuesDe" layoutX="650.0" layoutY="165.0" prefHeight="12.0" prefWidth="120.0"/>

                                        <JFXButton fx:id="buttonBuscar" layoutX="610.0" layoutY="250.0" mnemonicParsing="false" text="Buscar">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </JFXButton>
                                    </children>
                                </Pane>
                                <JFXButton fx:id="buttonEliminarAnuncioPago" layoutX="250.0" layoutY="415.0" mnemonicParsing="false" text="Eliminar Anuncio Pago">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </JFXButton>
                                <JFXButton fx:id="buttonVolver" layoutX="50.0" layoutY="415.0" mnemonicParsing="false" text="Volver">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </JFXButton>
                            </children>
                        </AnchorPane>
                    </content>

                </Tab>
                <Tab text="Realizar pago">
                    <content>

                    </content>
                </Tab>
            </tabs>
        </JFXTabPane>
        <JFXToggleButton fx:id="toggleFiltrado" layoutX="720.0" layoutY="71.0"  prefHeight="58.0" prefWidth="138.0" text="Filtrar tabla" toggleColor="#4059a9" toggleLineColor="#adbde0">
            <font>
                <Font size="11.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </JFXToggleButton>

    </children>





</AnchorPane>
