<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import java.net.URL?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXDatePicker?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gal.sdc.usc.wallstreet.controller.PagosController"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@styles/base.css" />
        <URL value="@styles/cartera.css" />
    </stylesheets>

    <children>
        <JFXTabPane fx:id="menu_pagos" layoutX="-1.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="555.0" prefWidth="867.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Pagos programados ">
                    <content>
                        <AnchorPane prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <!--Tabla de pagos programados-->
                                <TableView fx:id="tablaPagosProgramados" layoutX="15.0" layoutY="15.0" prefHeight="350.0" prefWidth="425.0">
                                    <columns>
                                        <TableColumn prefWidth="425.0" text="Pagos Participaciones Empresa">
                                            <columns>
                                                <TableColumn fx:id="colFechaAnuncio" prefWidth="106.25" text="Fecha anuncio" />
                                                <TableColumn fx:id="colFechaPago" prefWidth="106.25" text="Fecha Pago" />
                                                <TableColumn fx:id="colSaldo" prefWidth="106.25" text="Saldo" />
                                                <TableColumn fx:id="colBenificiario" prefWidth="106.25" text="Benificiario" />
                                            </columns>
                                        </TableColumn>
                                    </columns>
                                </TableView>

                                <Label fx:id="lblFiltrar" layoutX="625.0" layoutY="15.0" text="FILTRAR">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblBeneficiario" layoutX="500.0" layoutY="70.0" text="Beneficiario:">
                                    <font>
                                        <Font size="17.0" />
                                    </font>
                                </Label>
                                <JFXTextField fx:id="txtBeneficiario" layoutX="635.0" layoutY="65.0" prefHeight="15.0" prefWidth="140.0">
                                </JFXTextField>
                                <Label fx:id="lblNumParticipaciones" layoutX="500.0" layoutY="145.0" text="Num Participaciones:">
                                    <font>
                                        <Font size="17.0" />
                                    </font>
                                </Label>
                                <JFXTextField fx:id="txtMinParticipaciones" layoutX="570.0" layoutY="185.0" prefHeight="20.0" prefWidth="60.0">
                                </JFXTextField>
                                <JFXTextField fx:id="txtMaxParticipaciones" layoutX="720.0" layoutY="185.0" prefHeight="20.0" prefWidth="60.0">
                                </JFXTextField>

                                <Label fx:id="lblAnuncioFecha" layoutX="500.0" layoutY="245.0" text="Anuncio fecha de pago:">
                                    <font>
                                        <Font size="17.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblAntesDe" layoutX="550.0" layoutY="300.0" text="Antes de:">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <JFXDatePicker fx:id="txtAntesDe" layoutX="650.0" layoutY="290.0" prefHeight="12.0" prefWidth="90.0"/>
                                <Label fx:id="lblDespuesDe" layoutX="550.0" layoutY="350.0" text="Despues de:">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <JFXDatePicker fx:id="txtDespuesDe" layoutX="650.0" layoutY="340.0" prefHeight="12.0" prefWidth="90.0"/>

                                <JFXButton fx:id="buttonBuscar" layoutX="620.0" layoutY="395.0" mnemonicParsing="false" text="Buscar">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </JFXButton>

                                <JFXButton fx:id="buttonEliminarAnuncioPago" layoutX="120.0" layoutY="395.0" mnemonicParsing="false" text="Eliminar Anuncio Pago">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </JFXButton>


                            </children>
                        </AnchorPane>
                    </content>

                </Tab>
                <Tab text="Realizar pago">
                    <content>

                    </content>
                </Tab>
            </tabs>
        </JFXTabPane>

    </children>





</AnchorPane>
